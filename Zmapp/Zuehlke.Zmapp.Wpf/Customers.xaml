<Window x:Class="Zuehlke.Zmapp.Wpf.Customers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:commands="clr-namespace:Microsoft.Practices.Prism.Commands;assembly=Microsoft.Practices.Prism"
        Title="Customers" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="CustomerGrid" ItemsSource="{Binding Customers}" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" >
        </DataGrid>
        <Button Content="Save" Padding="10,0,10,0" Grid.Row="1" Width="Auto" HorizontalAlignment="Left" Margin="10"
                                        commands:Click.Command="{Binding DataContext.SaveCustomerCommand,RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                        <!--commands:Click.CommandParameter="{Binding SelectedItem,ElementName=CustomerGrid}"/>-->
    </Grid>
</Window>
