<UserControl x:Class="Zuehlke.Zmapp.Wpf.Employees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:commands="clr-namespace:Microsoft.Practices.Prism.Commands;assembly=Microsoft.Practices.Prism">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="EmployeeGrid" ItemsSource="{Binding Employees}" Margin="10" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" >
        </DataGrid>
        <Button Content="Save" Padding="10,0,10,0" Grid.Row="1" Width="Auto" HorizontalAlignment="Left" Margin="10"
                                        commands:Click.Command="{Binding DataContext.SaveEmployeeCommand,RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
                                        <!--commands:Click.CommandParameter="{Binding SelectedItem,ElementName=CustomerGrid}"/>-->
    </Grid>
</UserControl>
